inline double Vector::operator ()(int r) const         // acces a un element d'un vecteur
{
  #ifdef DEBUG
  if (r < 1 || r > nbRows())
    error("debordement indice de ligne");
  #endif

  return tabVect[r];
}


inline double& Vector::operator ()(int r)         // acces a un element d'un vecteur
{
  #ifdef DEBUG
  if (r < 1 || r > nbRows())
    error("debordement indice de ligne");
  #endif

  return tabVect[r];
}


